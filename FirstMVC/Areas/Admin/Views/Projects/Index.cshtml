@model IEnumerable<FirstMVC.Models.Project>
@{
    ViewBag.Title = "Projeler";
}

<h2>Projelerim</h2>

<div>

    <a href="@Url.Action("Create")" class="btn btn-primary">Yeni Proje</a>

    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Title)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>@Html.DisplayNameFor(model => model.Category.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Photo)</th>
                <th>Eylemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

            <tr>
                <!--DisplayFor otomatik formatlama yapar. Kullanımı zorunlu değldir.-->
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>

                <td><img src="/uploads/@Html.DisplayFor(modelItem  => item.Photo)" width="50" /></td>
                <td><a href="@Url.Action("Edit", new {id=item.Id})" class="btn btn-success btn-sm">Düzenle</a> <a href="@Url.Action("Delete", new {id=item.Id})" class="btn btn-danger btn-sm" onclick="return confirm('Bu kaydı silmek istediğinize emin misiniz?');">Sil</a></td>

            </tr>
            }
        </tbody>
    </table>
</div>

